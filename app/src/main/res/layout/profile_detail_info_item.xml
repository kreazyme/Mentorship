<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_detail_info_item_imageView_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_study" />

    <TextView
        android:id="@+id/profile_detail_info_item_textView_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Học tại Bla bla"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_detail_info_item_imageView_pic"
        app:layout_constraintTop_toTopOf="@+id/profile_detail_info_item_imageView_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>