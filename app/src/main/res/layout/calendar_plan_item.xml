<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/calendar_plan_item_textView_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 AM"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_plan_item_textView_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tư vấn về Android"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/calendar_plan_item_textView_time_end"
        app:layout_constraintStart_toEndOf="@id/calendar_plan_item_textView_time_end"
        app:layout_constraintTop_toTopOf="@id/calendar_plan_item_textView_time_end" />

    <TextView
        android:id="@+id/calendar_plan_item_textView_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:00 PM"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView29"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_plan_item_textView_time_start"
        app:layout_constraintStart_toEndOf="@+id/calendar_plan_item_textView_time_start"
        app:layout_constraintTop_toTopOf="@+id/calendar_plan_item_textView_time_start" />
</androidx.constraintlayout.widget.ConstraintLayout>